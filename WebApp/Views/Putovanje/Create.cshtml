@using WebApp
@model WebApp.Models.Putovanje


@{
    ViewData["Title"] = "Kreiraj novo putovanje";
}

<style>
    body {
        background-image: url('https://coolbackgrounds.io/images/backgrounds/index/ranger-4df6c1b6.png');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
    }

    .alert-container {
        position: fixed;
        bottom: 20px;
        right: 20px;
        z-index: 9999;
    }

    .fade-out {
        animation: fadeOut ease 2s;
        animation-fill-mode: forwards;
    }

    @@keyframes fadeOut {
        0% {
            opacity: 1;
        }

        100% {
            opacity: 0;
        }
    }


</style>
<h2>Kreiraj novo putovanje</h2>
<div class="alert-container">
    @if (TempData.ContainsKey(Constants.Message))
    {
        <div id="alert-message" class="alert alert-@((bool)TempData[Constants.ErrorOccurred] ? "danger" : "success")">
            @TempData[Constants.Message]
        </div>
    }
</div>
<h4>Putovanje</h4>
<hr />
<div class="alert-container">
    @if (TempData.ContainsKey(Constants.Message))
    {
        <div class="alert alert-@((bool)TempData[Constants.ErrorOccurred] ? "danger" : "success")">
            @TempData[Constants.Message]
        </div>
    }
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label class="control-label">Mjesto</label>
                <select asp-for="IdMjesto" class="form-control" asp-items="ViewBag.IdMjesto">
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Smještaj</label>
                <select asp-for="IdSmjestaj" class="form-control" asp-items="ViewBag.IdSmjestaj"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Vozilo</label>
                <select asp-for="IdVozilo" class="form-control" asp-items="ViewBag.IdVozilo"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Vrsta putovanja</label>
                <select asp-for="IdVrstaPutovanja" class="form-control" asp-items="ViewBag.IdVrstaPutovanja"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Opis</label>
                <input asp-for="Opis" class="form-control" />
                <div><span asp-validation-for="Opis" class="text-danger"></span></div>
            </div>
            <div class="form-group">
                <label class="control-label">Ime i prezime voditelja</label>
                <input asp-for="ImeprezimeVoditelj" class="form-control" />
                <div><span asp-validation-for="ImeprezimeVoditelj" class="text-danger"></span></div>
            </div>
            <div class="form-group">
                <label class="control-label">Cijena</label>
                <input asp-for="Cijena" class="form-control" />
                <div><span asp-validation-for="Cijena" class="text-danger"></span></div>
            </div>
            <div class="form-group">
                <label class="control-label">Datum polaska</label>
                <input asp-for="DatumPolaska" class="form-control" type="date" />
                <div><span asp-validation-for="DatumPolaska" class="text-danger"></span></div>
            </div>
            <div class="form-group">
                <label class="control-label">Datum povratka</label>
                <input asp-for="DatumPovratka" class="form-control" type="date" />
                <div><span asp-validation-for="DatumPovratka" class="text-danger"></span></div>
            </div>
            <div class="form-group">
                <label class="control-label">Rate (da/ne)</label>
                <select asp-for="Rate" class="form-control" asp-items="ViewBag.Rate"></select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Kreiraj" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Odustani</a>
            </div>

        </form>
    </div>
</div>
<br />

<script>
    var alertMessage = document.getElementById('alert-message');
    if (alertMessage) {
        setTimeout(function () {
            alertMessage.classList.add('fade-out');
        }, 3000);
    }
</script>

@section scripts {
    <partial name="IncludeValidation" />
}
